.chatInput {
    height: fit-content;
    margin: 0;
    display: flex;
    flex-flow: row;
    align-items: center;
    padding-top: 0.4vh;
}

.chatInputBox {
    padding: 0.4vw;
    flex: auto;
    margin-right: 2vh;
    background-color: rgba(255, 255, 255, 0.223);
    color: white;
    box-shadow: rgba(0, 0, 0, 0.459) 0.3vw 0.3vw 0;
    font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    text-shadow:
    -1px -1px 0 #000,  
     1px -1px 0 #000,
    -1px  1px 0 #000,
     1px  1px 0 #000;
     letter-spacing: 0.4vh;
}

.chatInputBox::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
    color: rgb(54, 54, 54);
    opacity: 1; /* Firefox */
    text-shadow: none;
  }
  .chatInputBox:-ms-input-placeholder { /* Internet Explorer 10-11 */
    color: rgb(54, 54, 54);
    text-shadow: none;
  }
  .chatInputBox::-ms-input-placeholder { /* Microsoft Edge */
    color: rgb(54, 54, 54);
    text-shadow: none;
  }


  .message {
    font-family:'Arial Narrow';
    /*font-size: max(2em, 3vw); */
    margin: 0.2vw;
    padding: 0.2vw;
    display: flex;
    flex-flow: column wrap;
    justify-content: flex-start;
    align-items: flex-start;
    border-radius: 0.5vw;
    background-color: rgba(0, 0, 0, 0.267);
    padding: 1vh;
    
}
.message * {
    color: white;
    text-shadow:
    -2px -2px 0 #000,  
     2px -2px 0 #000,
    -2px  2px 0 #000,
     2px  2px 0 #000;
     word-break: break-all;
    }

.message-date {
    margin-bottom: 0;
    padding-bottom: 0;
    padding-right: 1vw;
    font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    font-size: var(--small-font-size);
    color: rgb(255, 183, 0);
}

.message-uname {
    margin-bottom: 0;
    padding-bottom: 0;
    font-size: var(--base-font-size);
    color: yellow;
}

.message-text {
    padding-top: 0;
    margin-top: 0;
    font-size: var(--base-font-size);
}