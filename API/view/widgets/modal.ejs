<style>
    .modal-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        z-index: 30;
        display: none;
        flex-flow: column;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }
    .modal-container {
        display: flex;
        flex-flow: column;
        justify-content: flex-start;
        align-items: flex-start;
        width: fit-content;
        height: fit-content;
        border-radius: 0.5em 0.5em 0 0;
        box-shadow: 10px 10px #00000080;
        overflow: hidden;
    }
    .modal-header {
        border: 1px solid black;
        border-radius: 0.5em 0.5em 0 0;
        width: 100%;
        min-height: 2em;
        height: fit-content;
        display: flex;
        padding: 0.5vh;
        padding-left: 4vh;
        padding-right: 4vh;
        justify-content: center;
        align-items: center;
        text-align: center;
        font-size: var(--small-font-size);
        font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        color: white;
        background-color: #2b2828;
        background: radial-gradient(circle, rgb(103, 103, 103) 0%, rgb(94, 94, 94) 20%, rgb(0, 0, 0) 100%);
        text-shadow:
        -1px -1px 0 #000,  
         1px -1px 0 #000,
        -1px  1px 0 #000,
         1px  1px 0 #000;
         overflow: hidden;
    }
    
    .modal-content {
        display: flex;
        flex-flow: column wrap;
        justify-content: center;
        align-items: center;
        width: 100%;
        border: 1px solid black;
        border-bottom: 0;
        background-color: black;
        background: radial-gradient(circle, rgb(103, 103, 103) 0%, rgb(94, 94, 94) 20%, rgb(0, 0, 0) 100%);
        padding: 4vh;
        font-size: var(--big-font-size);
        font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        color: white;
        text-shadow:
        -1px -1px 0 #000,  
         1px -1px 0 #000,
        -1px  1px 0 #000,
         1px  1px 0 #000;
         overflow: auto;
    }
    .modal-footer {
        display: flex;
        flex-flow: row;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        border: 1px solid black;
        background-color: black;
        background: radial-gradient(circle, rgb(103, 103, 103) 0%, rgb(94, 94, 94) 20%, rgb(0, 0, 0) 100%);
        overflow: hidden;
    }    
    .modal-footer button {
        margin: 0.5em;
        margin-left: 2em;
        margin-right: 2em;
    }
    .modal-ok-container {
        margin: 0.5em;
        margin-left: 2em;
        margin-right: 2em;
    }

</style>    
<div class="modal-wrapper">
    <div class="modal-container">
        <div class="modal-header"></div>
        <div class="modal-content"></div>
        <div class="modal-footer">
            <button class="button button_cancel" onclick="hideModal()">CANCEL</button>
            <div class="modal-ok-container"></div>
            <!-- <button class="modal-ok button button_ok" type="submit">OK</button> -->
        </div>
    </div>
    <script>
        function hideModal() {
            document.querySelector('.modal-wrapper').style.display = 'none';
        }
    </script>
</div>
    