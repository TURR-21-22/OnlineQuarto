<%- include('../widgets/header') %>
<script src="/socket.io/socket.io.js"></script>
<script>const userInfo = <%- JSON.stringify(userInfo) %>;</script>
<style>
.highscore-wrapper {
    display: flex;
    flex-flow: column;
    flex: auto;
    width: 100%;
    overflow: auto;
}
.highscore-header {
    height: fit-content;
    width: 100%;
    padding: 0.5vh;
    padding-left: 4vh;
    padding-right: 4vh;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    font-size: var(--base-font-size);
    color: white;
    background-color: #2b2828;
    background: radial-gradient(circle, rgb(103, 103, 103) 0%, rgb(94, 94, 94) 20%, rgb(0, 0, 0) 100%);
    border-radius: 1.5vw 1.5vw 0 0;
    text-shadow:
    -1px -1px 0 #000,  
     1px -1px 0 #000,
    -1px  1px 0 #000,
     1px  1px 0 #000;
}
.highscore-container {
    display: flex;
    flex-flow: column;
    width: 100%;
    height: 100%;
    list-style: none;
    border: 1px solid black;
    overflow: auto;
}
.highscore-table {
    overflow: auto;
    width: 100%;
    height: 100%;
    font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    color: white;
    text-shadow:
    -1px -1px 0 #000,  
     1px -1px 0 #000,
    -1px  1px 0 #000,
     1px  1px 0 #000;
}

table {
    table-layout: auto !important;
    border-collapse: collapse;
    height: 100%;
    width: 100%;
}
    th, td {
        text-align: left;
        padding: 8px;
    }
    th {
        position: sticky;
        top: 0;
        background-color: #006641;
        color: white;
    }
    tr:nth-child(even){
        background-color: #f2f2f225
    }
</style>
<div class="main">
    <div class="highscore-wrapper">
        <div class="highscore-header">Highscore</div>
        <div class="highscore-container">
            <table class="highscore-table">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Name</th>
                        <th>Score</th>
                        <th>Games</th>
                    </tr>
                </thead>
                <tr>
                    <% for(var i=0; i < results.length;i++) {%>
                    <td><%= i+1 %></td>
                    <td><%=results[i].username%></td>
                    <td><%=results[i].score%></td>
                    <td><%=results[i].playedGames%></td>
                </tr><%}%>
            </table>
        </div>
    </div>
</div>
<%- include('../widgets/footer') %>
<script type="module" src="/js/quarto/landing/highscore.js"></script>
<%- include('../footer') %>

